//                 me.gridVenta.getStore().setExtraParam('TURNO',cmb.getValue());
//                 me.gridVenta.getStore().load();
////                me.gridVenta().getStore().setExtraParams({
////                    FECHA :  me.date_fecha.getValue()
////                });
//            }
//            else{
//                Ext.Msg.alert("Seleccione Fecha primero");
//            }
//        });
    }
});
